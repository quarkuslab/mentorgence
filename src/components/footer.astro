 ---
import { Image } from "astro:assets";

import pattern5Img from "@/assets/Pattern 5.svg";
import pattern6Img from "@/assets/images/Pattern 6.svg";
import whatsappImg from "@/assets/icons8-whatsapp-50.png";
import mailIcon from "@/assets/Vector (1).svg";
import threadsIcon from "@/assets/Vector-1.svg";
import instagramIcon from "@/assets/g2.svg";
import facebookIcon from "@/assets/Vector.svg";
---

<div class="  w-full h-[80vh] " id="support">
  <div class="ftop w-full h-1/2 flex items-center bg-primary">
    <div class="lshp h-full flex items-center">
      <Image src={pattern5Img} alt="pattern 5" / class="h-[90%] w-full">
    </div>
    <div class=" w-full h-full flex flex-col items-center justify-center text-[2.4rem] text-white">
      <div class="mt">
        <h3 class="text-center font-work-sans text-4xl font-bold leading-[48px] text-center underline from-font decoration-transparent">Know more about our services</h3>
      </div>
      <div class="mb mt-[2%] gap-[10px] w-1/2 flex items-center justify-center">
        <button class="btn-filled px-6 py-2 h-[50px] bg-white border-none rounded-lg text-primary text-[16px] font-bold whitespace-nowrap hover:border hover:border-white hover:bg-transparent hover:text-white transition duration-300">
          Make an Appointment
        </button>
        <button class="btn-unfilled px-6 py-2 h-[50px] rounded-lg border border-white bg-transparent text-white text-[16px] font-bold whitespace-nowrap hover:bg-white hover:border-none hover:rounded-lg hover:text-primary transition duration-300">
          Contact Us
        </button>
        
        </div>
    </div>
    <div class="rshp h-full flex items-center">
      <Image src={pattern6Img} alt="Pattern 6" / class=" hidden md:flex w-full h-[50%]">
    </div>
  </div>


  <div class="sm:flex md:hidden  w-full flex-col h-[30vh] ">
    <div class=" w-full h-[50%] flex flex-col  items-center justify-center   ">
      <div class="contact-section  flex flex-col gap-[15px]">
        <div class="contact-item flex items-center">
          <Image src={whatsappImg} alt="Whatsapp" class="icon w-[30px] h-[30px] mr-[10px]" />
          <span  class="text-[#0F2F64] text-[16px] font-normal leading-[25.6px] text-left  decoration-skip-ink-none">+971 561625698</span>
        </div>
        <div class="contact-item flex items-center">
          <Image src={mailIcon} alt="Email" class="icon w-[30px] h-[30px] mr-[10px]" />
          <span  class="text-[#0F2F64] text-[16px] font-normal leading-[25.6px] text-left  decoration-skip-ink-none">me2gence@gmail.com</span>
        </div>
      </div>
  
    </div>
    <div class=" w-full h-[50%] flex ">
      <div class=" w-1/2 h-full items-center flex  ">
        <div class="social-icons flex-1 flex justify-center gap-[30px]">
          <a href="#" class="social-link w-[40px] h-[40px]">
            <Image src={threadsIcon} alt="Threads" class="icon" />
          </a>
          <a href="#" class="social-link">
            <Image src={instagramIcon} alt="Instagram" class="icon" />
          </a>
          <a href="#" class="social-link">
            <Image src={facebookIcon} alt="Facebook" class="icon" />
          </a>
        </div>
      </div>
      <div class="w-1/2 h-full items-center flex justify-center">
        <ul class="list-none p-0 m-0">
          <li class="mb-[12px]"><a class="text-[#536288] text-[16px] font-normal leading-[25.6px] text-left  decoration-skip-ink-none hover:underline hover:text-[#0F2F64]" href="#about">About Us</a></li>
          <li class="mb-[12px]"><a class="text-[#536288] text-[16px] font-normal leading-[25.6px] text-left  decoration-skip-ink-none hover:underline hover:text-[#0F2F64]" href="#location">Location</a></li>
          <li class="mb-[12px]"><a class="text-[#536288] text-[16px] font-normal leading-[25.6px] text-left  decoration-skip-ink-none hover:underline hover:text-[#0F2F64]" href="#careers">Careers</a></li>
        </ul>
      </div>
    </div>
        
    <div class="text-center text-[14px] text-[#666] mt-[20px]">
      <p>© 2022 Blackboard India Pvt. Ltd. All rights reserved.</p>
    </div>

   </div>

  <div class="h-[60%] md:block  hidden ">
    <footer class="footer bg-[#F5F9FE] p-[40px_60px] text-[#333] h-full flex flex-col justify-end">
      <div class="footer-container flex justify-between items-start flex-wrap gap-[20px] border-b border-[#ddd] pb-[20px]">
        
        <div class="contact-section flex-1 flex flex-col gap-[15px]">
          <div class="contact-item flex items-center">
            <Image src={whatsappImg} alt="Whatsapp" class="icon w-[30px] h-[30px] mr-[10px]" />
            <span  class="text-[#0F2F64] text-[16px] font-normal leading-[25.6px] text-left  decoration-skip-ink-none">+971 561625698</span>
          </div>
          <div class="contact-item flex items-center">
            <Image src={mailIcon} alt="Email" class="icon w-[30px] h-[30px] mr-[10px]" />
            <span  class="text-[#0F2F64] text-[16px] font-normal leading-[25.6px] text-left  decoration-skip-ink-none">me2gence@gmail.com</span>
          </div>
        </div>

        
        <div class="social-icons flex-1 flex justify-center gap-[30px]">
          <a href="#" class="social-link w-[40px] h-[40px]">
            <Image src={threadsIcon} alt="Threads" class="icon" />
          </a>
          <a href="#" class="social-link">
            <Image src={instagramIcon} alt="Instagram" class="icon" />
          </a>
          <a href="#" class="social-link">
            <Image src={facebookIcon} alt="Facebook" class="icon" />
          </a>
        </div>

        
        <div class="links-section flex-2 flex justify-between gap-[50px]">
          <div class="hidden link-group flex-1 mr-0">
            <ul></ul>
          </div>
          <div class=" link-group flex-1 mr-0">
            <h4 class="  text-[16px] font-bold leading-[25.6px] text-left mb-[15px]">Company</h4>
            <ul class="list-none p-0 m-0">
              <li class="mb-[12px]"><a class="text-[#536288] text-[16px] font-normal leading-[25.6px] text-left  decoration-skip-ink-none hover:underline hover:text-[#0F2F64]" href="#about">About Us</a></li>
              <li class="mb-[12px]"><a class="text-[#536288] text-[16px] font-normal leading-[25.6px] text-left  decoration-skip-ink-none hover:underline hover:text-[#0F2F64]" href="#location">Location</a></li>
              <li class="mb-[12px]"><a class="text-[#536288] text-[16px] font-normal leading-[25.6px] text-left  decoration-skip-ink-none hover:underline hover:text-[#0F2F64]" href="#careers">Careers</a></li>
            </ul>
          </div>
          <div class=" flex-col link-group flex-1 mr-0 ">
            <h4 class="text-[16px] font-bold leading-[25.6px] text-left mb-[15px]">Resources</h4>
            <ul class="list-none p-0 m-0">
              <li class="mb-[12px]"><a class="text-[#536288] text-[16px] font-normal leading-[25.6px] text-left  decoration-skip-ink-none hover:underline hover:text-[#0F2F64]" href="#">Blog</a></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="text-center text-[14px] text-[#666] mt-[20px]">
        <p>© 2022 Blackboard India Pvt. Ltd. All rights reserved.</p>
      </div>

    </footer>
  </div>
</div>








