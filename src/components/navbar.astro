<div class="navbar w-full h-10% flex">
  <div class="logo w-2/5 flex justify-between" >
    <div class="child w-1/2 flex bg-white items-center ml-[5%]">
      <Image src={logoImg} alt="logo" />
    </div>
    <div class="child"></div>
  </div>
  <div class="links_section w-full flex justify-end items-center">
    <div class="links w-1/2 mr-[-2%]">
      <ul class="flex justify-end w-full">
        <li class="flex ml-[5%]">
          <a 
            href="#home" 
            class="relative text-black text-[16px] font-medium inline-block after:content-[''] after:absolute after:left-0 after:bottom-[-2px] after:w-0 after:h-[2px] after:bg-blue-600 after:transition-all after:duration-500 hover:after:w-full">
            Home
          </a>
        </li>
        <li class="flex ml-[5%]">
          <a 
            href="#about" 
            class="relative text-black text-[16px] font-medium inline-block after:content-[''] after:absolute after:left-0 after:bottom-[-2px] after:w-0 after:h-[2px] after:bg-blue-600 after:transition-all after:duration-500 hover:after:w-full">
            About Us
          </a>
        </li>
        <li class="flex ml-[5%]">
          <a 
            href="#support" 
            class="relative text-black text-[16px] font-medium inline-block after:content-[''] after:absolute after:left-0 after:bottom-[-2px] after:w-0 after:h-[2px] after:bg-blue-600 after:transition-all after:duration-500 hover:after:w-full">
            Support
          </a>
        </li>
      </ul>
    </div>
    <div class="btn flex ml-[5%] mr-[3%]">
      <div class="button">
        <a 
          href="" 
          class="bg-primary text-white w-[120px] h-[35px] rounded-[5px] flex justify-center items-center no-underline font-semibold text-[14px] leading-[25.6px] tracking-[2%]">
          Register Now
        </a>
      </div>
    </div>
  </div>
  
</div>

<div class="mnavbar" id="mb_home">
  <div class="mlogo">
    <div class="mchild">
      <img src="Group.svg" alt="Mobile Logo" />
    </div>
    <div class="mchild"></div>
  </div>
  <div class="mlinks_section">
    <div class="mbtn">
      <div class="mbutton">
        <a href="">Register Now</a>
      </div>
    </div>
    <button class="toggle-btn" onclick="toggleMenu()">☰</button>
    <!-- Toggle Button -->
  </div>
</div>
<div class="menu-overlay" id="menuOverlay"></div>
<!-- Background overlay -->
<div class="mb_links" id="mbLinks">
  <button class="close-btn" onclick="toggleMenu()">✕</button>
  <!-- Close button -->
  <ul>
    <li><a href="#mb_home">Home</a></li>
    <li><a href="#mb_about">About Us</a></li>
    <li><a href="#mb_support">Support</a></li>
  </ul>
</div>
